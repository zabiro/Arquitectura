<p id="notice"><%= notice %></p>

<h1>Peticions</h1>

<table>
  <thead>
    <tr>
      <th>Tipo de documento</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Direccion</th>
      <th>Correo</th>
      <th>Pais</th>
      <th>Ciudad</th>
      <th>Tiposolicitud</th>
      <th>Detalle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peticions.each do |peticion| %>
      <tr>
        <td><%= peticion.Tipo_de_documento %></td>
        <td><%= peticion.Nombre %></td>
        <td><%= peticion.Apellido %></td>
        <td><%= peticion.Direccion %></td>
        <td><%= peticion.Correo %></td>
        <td><%= peticion.Pais %></td>
        <td><%= peticion.ciudad %></td>
        <td><%= peticion.tipoSolicitud %></td>
        <td><%= peticion.Detalle %></td>
        <td><%= link_to 'Show', peticion %></td>
        <td><%= link_to 'Edit', edit_peticion_path(peticion) %></td>
        <td><%= link_to 'Destroy', peticion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

